<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:paddingRight="12dp"
    android:fontFamily="@font/roboto"
    android:paddingLeft="12dp"
    android:background="@drawable/bg_bottom_sheet">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jenis Pelanggaran"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>


    <GridLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/b_tertip_parkir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:paddingLeft="20dp"
            android:background="@drawable/jenis_pelanggaran_button_grey"
            android:drawableLeft="@drawable/tertip_parkir_icon"
            android:text="Tertip Parkir"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/b_vandalisme"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/jenis_pelanggaran_button_grey"
            android:textAllCaps="false"
            android:text="Vandalisme"
            android:textColor="@color/white"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="6dp"
            android:drawableLeft="@drawable/vandalisme_icon"
            android:drawablePadding="15dp"/>

        <Button
            android:id="@+id/b_kebersihan"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/jenis_pelanggaran_button_grey"
            android:textAllCaps="false"
            android:text="Kebersihan"
            android:textColor="@color/white"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="6dp"
            android:drawableLeft="@drawable/kebersihan_icon"
            />

        <Button
            android:id="@+id/b_fasilitas_publik"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/jenis_pelanggaran_button_grey"
            android:textAllCaps="false"
            android:text="Fasilitas Publik"
            android:textColor="@color/white"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="6dp"
            android:drawableLeft="@drawable/fasilitas_publik_icon"
            android:drawablePadding="6dp"/>

        <Button
            android:id="@+id/b_gedung_ruangan"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:background="@drawable/jenis_pelanggaran_button_grey"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="Gedung dan Ruangan"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/gedung_ruangan_icon"
            android:layout_columnSpan="2"
            />



    </GridLayout>

</LinearLayout>